{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://cdevents.dev/draft/schema/core/pipelinerunstarted",
    "title": "CDEvents PipelineRun Started",
    "description": "Schema of the PipelineRun subject in the PipelineRun Started event",
    "type": "object",
    "required": [ "id", "pipelineName"],
    "properties": {
        "id": {
          "description": "Identifier of the PipelineRun",
          "type": "string"
        },
        "source": {
            "description": "The source where the PipelineRun is executed",
            "type": "string"
        },
        "pipelineName": {
            "description": "The name of the pipeline",
            "type": "string"
        },
        "url": {
            "description": "URL to the PipelineRun details",
            "type": "string"
        }
    }
}