{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://cdevents.dev/draft/schema/core/taskrunstarted",
    "title": "CDEvents TaskRun Started",
    "description": "Schema of the TaskRun subject in the TaskRun Started event",
    "type": "object",
    "required": [ "id", "taskName"],
    "properties": {
        "id": {
          "description": "Identifier of the TaskRun",
          "type": "string"
        },
        "source": {
            "description": "The source where the TaskRun is executed",
            "type": "string"
        },
        "taskName": {
            "description": "The name of the task",
            "type": "string"
        },
        "url": {
            "description": "URL to the TaskRun details",
            "type": "string"
        }
    }
}