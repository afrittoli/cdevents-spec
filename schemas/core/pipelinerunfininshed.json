{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://cdevents.dev/draft/schema/core/pipelinerunfinished",
    "title": "CDEvents PipelineRun Finished",
    "description": "Schema of the PipelineRun subject in the PipelineRun Finished event",
    "type": "object",
    "required": [ "id", "pipelineName", "status"],
    "properties": {
        "id": {
          "description": "Identifier of the PipelineRun",
          "type": "string"
        },
        "source": {
            "description": "The source where the PipelineRun is executed",
            "type": "string"
        },
        "pipelineName": {
            "description": "The name of the pipeline",
            "type": "string"
        },
        "status": {
            "description": "The status of the  PipelineRun when it finished",
            "enum": ["success", "error", "failure"]
        },
        "url": {
            "description": "URL to the PipelineRun details",
            "type": "string"
        },
        "errors": {
            "description": "Details about the PipelineRun error or failure",
            "type": "string"
        }
    }
}