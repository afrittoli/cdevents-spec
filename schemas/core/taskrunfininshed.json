{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://cdevents.dev/draft/schema/core/taskrunfinished",
    "title": "CDEvents TaskRun Finished",
    "description": "Schema of the TaskRun subject in the TaskRun Finished event",
    "type": "object",
    "required": [ "id", "taskName", "status"],
    "properties": {
        "id": {
          "description": "Identifier of the TaskRun",
          "type": "string"
        },
        "source": {
            "description": "The source where the TaskRun is executed",
            "type": "string"
        },
        "taskName": {
            "description": "The name of the task",
            "type": "string"
        },
        "status": {
            "description": "The status of the  TaskRun when it finished",
            "enum": ["success", "error", "failure"]
        },
        "url": {
            "description": "URL to the TaskRun details",
            "type": "string"
        },
        "errors": {
            "description": "Details about the TaskRun error or failure",
            "type": "string"
        }
    }
}